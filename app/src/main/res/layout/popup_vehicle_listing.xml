<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="393dp"
	android:layout_height="360dp">

	<androidx.constraintlayout.widget.ConstraintLayout
		android:id="@+id/vlContainerPopup"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@drawable/popup_rounded_bg"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">

		<TextView
			android:id="@+id/vlLabelListing"
			android:layout_width="188.2dp"
			android:layout_height="47.2dp"
			android:layout_gravity="center_horizontal|center"
			android:gravity="center"
			android:text="Add/Remove Listing?"
			android:textSize="32sp"
			android:textStyle="bold"
			app:layout_constraintBottom_toTopOf="@+id/vlLayoutConfirmationButton"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			tools:text="Add Listing?" />


		<androidx.constraintlayout.widget.ConstraintLayout
			android:id="@+id/vlLayoutConfirmationButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="40dp"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent">

			<ImageView
				android:id="@+id/vlImageConfirm"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginEnd="100dp"
				android:contentDescription="vlimageconfirm"
				app:layout_constraintEnd_toStartOf="@+id/vlImageCancel"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent"
				app:srcCompat="@drawable/vl_ib_confirm" />

			<ImageView
				android:id="@+id/vlImageCancel"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:contentDescription="vlimagecancel"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toTopOf="parent"
				app:srcCompat="@drawable/vl_ib_cancel" />

		</androidx.constraintlayout.widget.ConstraintLayout>

	</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>