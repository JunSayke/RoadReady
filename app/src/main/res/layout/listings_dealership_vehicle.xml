<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bhVehicleItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp"
    android:background="@drawable/rounded_corner_rectangle40_solid"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/bhVehicleImage"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginStart="5dp"
        android:contentDescription="@string/vehicle_item"
        app:srcCompat="@drawable/hp_iv_fortuner"
        tools:srcCompat="@drawable/hp_iv_fortuner" />

    <TextView
        android:id="@+id/bhVehicleName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:text="FORTUNER"
        android:textAlignment="center"
        android:textSize="24sp"
        tools:ignore="HardcodedText" />

    <ImageButton
        android:id="@+id/bhBtnDelete"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@null"
        android:src="@drawable/mv_ib_delete"
        android:textColor="#000000"
        android:textSize="12sp"
        tools:ignore="HardcodedText,TouchTargetSizeCheck" />
</LinearLayout>
