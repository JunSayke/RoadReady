<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragments.buyer.home.BankLoanForm_Fragment">

    <TextView
        android:id="@+id/blTitleContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="1"
        android:padding="20dp"
        android:text="@string/text_bank_loan_form"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/blContainerInpt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D9D9D9"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:id="@+id/blContainerFname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/blLblFname"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:labelFor="@id/blInptFname"
                android:text="@string/text_fname"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/blInptFname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autofillHints="@string/placeholder_first_name"
                android:background="@drawable/rounded_corner_rectangle20_solid"
                android:ems="10"
                android:inputType="text"
                android:padding="12dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/blLnameContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/blLblLname"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:labelFor="@id/blInptLname"
                android:text="@string/text_lname"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/blInptLname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autofillHints="@string/placeholder_last_name"
                android:background="@drawable/rounded_corner_rectangle20_solid"
                android:ems="10"
                android:inputType="text"
                android:padding="12dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/blContainerAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/blLblAddress"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:labelFor="@id/blInptAddress"
                android:text="@string/text_address"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/blInptAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autofillHints="@string/placeholder_last_name"
                android:background="@drawable/rounded_corner_rectangle20_solid"
                android:ems="10"
                android:inputType="text"
                android:padding="12dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/blContainerPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/blLblPhoneNumber"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:labelFor="@id/blInptPhoneNumber"
                android:text="@string/text_phone_number"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/blInptPhoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autofillHints="@string/placeholder_phone_number"
                android:background="@drawable/rounded_corner_rectangle20_solid"
                android:ems="10"
                android:inputType="phone|number"
                android:padding="12dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/blContainerValidId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/blLblValidId"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:labelFor="@id/blInptValidId"
                android:text="@string/text_valid_id"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/blInptValidId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autofillHints="@string/placeholder_phone_number"
                android:background="@drawable/rounded_corner_rectangle20_solid"
                android:ems="10"
                android:enabled="false"
                android:inputType="text"
                android:padding="12dp" />

            <ImageButton
                android:id="@+id/blBtnUploadValidId"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/upload"
                tools:src="@drawable/upload" />

            <TextView
                android:id="@+id/blLblUploadValidId"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:labelFor="@id/blBtnUploadValidId"
                android:text="@string/text_upload" />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/blContainerPickBank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/blLblPickBank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/text_pick_bank"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <RadioGroup
                android:id="@+id/blRgPickBank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="152dp"
                android:layout_marginBottom="5dp"
                app:layout_constraintBottom_toTopOf="@+id/blContainerBankCertificate"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/blLblPickBank">

                <RadioButton
                    android:id="@+id/blRbDealershipChoice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:color="#20f40e"
                    android:contentDescription="bankLoan(dealershipBankChoice)"
                    android:text="@string/text_dealership_choice" />

                <RadioButton
                    android:id="@+id/blRbBuyerChoice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:color="#20f40e"
                    android:contentDescription="bankLoan(buyerBankChoice)"
                    android:text="@string/text_buyer_choice" />
            </RadioGroup>

            <LinearLayout
                android:id="@+id/blContainerBankCertificate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:orientation="horizontal"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/blRgPickBank">

                <TextView
                    android:id="@+id/blLblBankCertificate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:labelFor="@id/blInptBankCertificate"
                    android:text="@string/text_bank_certificate"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/blInptBankCertificate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:autofillHints="@string/placeholder_phone_number"
                    android:background="@drawable/rounded_corner_rectangle20_solid"
                    android:ems="10"
                    android:enabled="false"
                    android:inputType="text"
                    android:padding="12dp" />

                <ImageButton
                    android:id="@+id/blBtnUploadBankCertificate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/upload"
                    tools:src="@drawable/upload" />

                <TextView
                    android:id="@+id/blLblUploadBankCertificate"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:labelFor="@id/blBtnUploadBankCertificate"
                    android:text="@string/text_upload" />
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/blContainerSignSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <com.github.gcacace.signaturepad.views.SignaturePad
                android:id="@+id/blInptSignature"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:background="@drawable/rectangle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:penColor="@android:color/black" />

            <TextView
                android:id="@+id/blLblSignature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/text_signature"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/blInptSignature" />

            <LinearLayout
                android:id="@+id/blBtnContainer"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/blLblSignature">

                <Button
                    android:id="@+id/blBtnSubmit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_weight="1"
                    android:backgroundTint="#3FBB54"
                    android:text="@string/text_btn_submit"
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/blBtnCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_weight="1"
                    android:backgroundTint="#FE4949"
                    android:text="@android:string/cancel"
                    android:textColor="#000000" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</LinearLayout>

