<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login_Activity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/op_red_circle"
            android:layout_width="264dp"
            android:layout_height="264dp"
            android:layout_marginStart="350dp"
            android:layout_marginBottom="120dp"
            android:contentDescription="@string/red_circle"
            app:layout_constraintBottom_toTopOf="@+id/op_roadReady_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/red_circle"
            tools:srcCompat="@drawable/red_circle" />

        <ImageView
            android:id="@+id/op_roadReady_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="376dp"
            android:contentDescription="@string/road_ready_logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/road_ready"
            tools:srcCompat="@drawable/road_ready" />

        <EditText
            android:id="@+id/login_tv_email"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="99dp"
            android:layout_marginEnd="102dp"
            android:autofillHints="@string/placeholder_email_address"
            android:background="@drawable/rounded_corner_rectangle"
            android:drawableStart="@drawable/mail"
            android:drawablePadding="5dp"
            android:ems="10"
            android:hint="@string/placeholder_email_address"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            app:layout_constraintBottom_toTopOf="@+id/login_tv_password"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/op_roadReady_logo" />

        <EditText
            android:id="@+id/login_tv_password"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="101dp"
            android:layout_marginBottom="281dp"
            android:autofillHints="@string/placeholder_password"
            android:background="@drawable/rounded_corner_rectangle"
            android:drawableStart="@drawable/lock"
            android:drawablePadding="5dp"
            android:ems="10"
            android:hint="@string/placeholder_password"
            android:inputType="textPassword"
            android:padding="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_tv_email" />

        <TextView
            android:id="@+id/login_tv_forgotPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="288dp"
            android:layout_marginEnd="120dp"
            android:layout_marginBottom="241dp"
            android:text="@string/text_forgot_your_password"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.542"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_tv_password"
            app:layout_constraintVertical_bias="0.241" />

        <Button
            android:id="@+id/login_btn_login"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="160dp"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="157dp"
            android:layout_marginBottom="178dp"
            android:backgroundTint="#0EB2F8"
            android:text="@string/text_btn_login"
            android:textColor="#332F2F"
            app:cornerRadius="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_tv_forgotPass" />

        <ImageView
            android:id="@+id/login_misc_or"
            android:contentDescription="@string/vector_or"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="55dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="56dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_btn_login"
            app:srcCompat="@drawable/login_grp_or"
            tools:srcCompat="@drawable/login_grp_or" />

        <Button
            android:id="@+id/login_btn_googleLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="155dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="162dp"
            android:layout_marginBottom="23dp"
            android:backgroundTint="#FFFFFF"
            android:foreground="@drawable/google"
            android:foregroundGravity="left"
            android:paddingStart="70dp"
            android:paddingEnd="30dp"
            android:text="@string/text_btn_loginGoogle"
            android:textColor="#747070"
            android:textSize="12sp"
            app:cornerRadius="28dp"
            app:layout_constraintBottom_toTopOf="@+id/login_tv_no_account_msg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_misc_or" />

        <TextView
            android:id="@+id/login_tv_no_account_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="89dp"
            android:layout_marginBottom="46dp"
            android:text="@string/text_no_have_account"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/login_tv_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="121dp"
            android:layout_marginBottom="46dp"
            android:linksClickable="true"
            android:text="@string/text_signup"
            android:textColor="#67AAE9"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/login_tv_no_account_msg" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>