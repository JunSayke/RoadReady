<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.buyer.home.CashPaymentForm_Fragment">

    <TextView
        android:id="@+id/cpfTitleContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="1"
        android:padding="20dp"
        android:text="@string/text_cash_payment_form"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/cpfContainerInpt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D9D9D9"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:id="@+id/cpfContainerFname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cpfLblFname"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:labelFor="@id/cpfInptFname"
                android:text="@string/text_fname"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/cpfInptFname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autofillHints="@string/placeholder_first_name"
                android:background="@drawable/rounded_corner_rectangle20_solid"
                android:ems="10"
                android:inputType="text"
                android:padding="12dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cpfLnameContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cpfLblLname"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:labelFor="@id/cpfInptLname"
                android:text="@string/text_lname"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/cpfInptLname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autofillHints="@string/placeholder_last_name"
                android:background="@drawable/rounded_corner_rectangle20_solid"
                android:ems="10"
                android:inputType="text"
                android:padding="12dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/cpfContainerAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cpfLblAddress"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:labelFor="@id/cpfInptAddress"
                android:text="@string/text_address"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/cpfInptAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autofillHints="@string/placeholder_last_name"
                android:background="@drawable/rounded_corner_rectangle20_solid"
                android:ems="10"
                android:inputType="text"
                android:padding="12dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cpfContainerPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cpfLblPhoneNumber"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:labelFor="@id/cpfInptPhoneNumber"
                android:text="@string/text_phone_number"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/cpfInptPhoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autofillHints="@string/placeholder_phone_number"
                android:background="@drawable/rounded_corner_rectangle20_solid"
                android:ems="10"
                android:inputType="phone|number"
                android:padding="12dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cpfContainerValidId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cpfLblValidId"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:labelFor="@id/cpfInptValidId"
                android:text="@string/text_valid_id"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/cpfInptValidId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autofillHints="@string/placeholder_phone_number"
                android:background="@drawable/rounded_corner_rectangle20_solid"
                android:ems="10"
                android:enabled="false"
                android:inputType="text"
                android:padding="12dp" />

            <ImageButton
                android:id="@+id/cpfBtnUploadValidId"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/upload"
                tools:src="@drawable/upload" />

            <TextView
                android:id="@+id/cpfLblUploadValidId"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:labelFor="@id/cpfBtnUploadValidId"
                android:text="@string/text_upload" />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cpfContainerMop"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/cpfLblMop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/text_mode_of_payment"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <RadioGroup
                android:id="@+id/cpfRgMop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="152dp"
                android:layout_marginBottom="13dp"
                app:layout_constraintBottom_toTopOf="@+id/cpfInptSignature"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cpfLblMop">

                <RadioButton
                    android:id="@+id/cpfRbOverCounter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:color="#20f40e"
                    android:text="@string/text_over_the_counter"
                    android:contentDescription="overthecounter"/>

                <RadioButton
                    android:id="@+id/cpfRbChequeDelivery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:color="#20f40e"
                    android:text="@string/text_cheque_on_delivery"
                    android:contentDescription="chequeondelivery"/>
            </RadioGroup>

            <com.github.gcacace.signaturepad.views.SignaturePad
                android:id="@+id/cpfInptSignature"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/rectangle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:penColor="@android:color/black" />

            <TextView
                android:id="@+id/cpfLblSignature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="165dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="165dp"
                android:layout_marginBottom="8dp"
                android:text="@string/text_signature"
                app:layout_constraintBottom_toTopOf="@+id/cpfBtnContainer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cpfInptSignature" />

            <LinearLayout
                android:id="@+id/cpfBtnContainer"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="152dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="151dp"
                android:layout_marginBottom="24dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cpfLblSignature">

                <Button
                    android:id="@+id/cpfBtnSubmit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_weight="1"
                    android:backgroundTint="#3FBB54"
                    android:text="@string/text_btn_submit"
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/cpfBtnCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_weight="1"
                    android:backgroundTint="#FE4949"
                    android:text="@android:string/cancel"
                    android:textColor="#000000" />
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</LinearLayout>

