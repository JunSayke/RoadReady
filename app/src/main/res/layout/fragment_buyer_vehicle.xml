<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bhVehicleItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp"
    android:background="@drawable/rounded_corner_rectangle40_solid"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/bhVehicleImage"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginStart="5dp"
        android:contentDescription="@string/vehicle_item"
        app:srcCompat="@drawable/hp_iv_fortuner"
        tools:srcCompat="@drawable/hp_iv_fortuner" />

    <LinearLayout
        android:id="@+id/bhContainerDesc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/bhVehicleName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="FORTUNER"
            android:textAlignment="center"
            android:textSize="16sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/bhVehicleDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="Toyota Ayala 23km"
            android:textAlignment="center"
            android:textSize="11sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/bhBtnSelect"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:backgroundTint="#3FBB54"
            android:text="@string/text_select"
            android:textColor="#000000"
            android:textSize="12sp"
            tools:ignore="HardcodedText,TouchTargetSizeCheck" />
    </LinearLayout>
</LinearLayout>
