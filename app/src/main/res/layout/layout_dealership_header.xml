<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dealershipFormHeader"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#888484">

        <ImageButton
            android:id="@+id/btnOpenSidebar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:contentDescription="btnOpenSidebar"
            android:padding="6dp"
            android:src="@drawable/sb_iv_union"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/sb_iv_union" />

        <ImageView
            android:id="@+id/ivRedCircle"
            android:layout_width="264dp"
            android:layout_height="264dp"
            android:layout_marginTop="-180dp"
            android:layout_marginEnd="-100dp"
            android:background="@drawable/circle"
            android:backgroundTint="#FE4949"
            android:contentDescription="red_circle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/dealershipTxtHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="PLACEHOLDER" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>