<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/apContainerContent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".fragments.buyer.applicationfragments.ApplicationProgress_Fragment">

    <TextView
        android:id="@+id/apTitleContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/text_application_progress"
        android:textSize="34sp" />

    <Button
        android:id="@+id/apBtnVehicleAppProgress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="50dp"
        android:backgroundTint="#D9D9D9"
        android:padding="20dp"
        android:text="@string/text_vehicle_application_progress"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <Button
        android:id="@+id/apBtnRegistrationProgress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="50dp"
        android:backgroundTint="#D9D9D9"
        android:padding="20dp"
        android:text="@string/text_registration_progress"
        android:textColor="@color/black"
        android:textSize="18sp" />
</LinearLayout>
