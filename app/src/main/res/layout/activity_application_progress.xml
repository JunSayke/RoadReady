<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".activity.buyer.ApplicationProgress_Activity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/formHeader"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/apImageCircle"
            android:layout_width="264dp"
            android:layout_height="264dp"
            android:layout_marginEnd="-120dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/circle"
            android:backgroundTint="#FE4949"
            android:contentDescription="@string/red_circle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="ImageContrastCheck" />

        <ImageButton
            android:id="@+id/apBtnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="19dp"
            android:backgroundTint="#00FFFFFF"
            android:contentDescription="@string/back_btn"
            android:scaleType="center"
            android:src="@drawable/left_arrow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/apContainerContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/formHeader">

        <TextView
            android:id="@+id/apTitleContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:gravity="center"
            android:text="@string/text_application_progress"
            android:textSize="34sp" />

        <Button
            android:id="@+id/apBtnVehicleAppProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="50dp"
            android:backgroundTint="#D9D9D9"
            android:padding="20dp"
            android:text="@string/text_vehicle_application_progress"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/apBtnRegistrationProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="50dp"
            android:backgroundTint="#D9D9D9"
            android:padding="20dp"
            android:text="@string/text_registration_progress"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>