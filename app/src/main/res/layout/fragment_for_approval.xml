<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/horizontalScrollView"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<LinearLayout
		android:id="@+id/approved"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">

		<ScrollView
			android:id="@+id/faSVForApprovalList"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_marginTop="50dp">

			<TableLayout
				android:id="@+id/faTblForApproved"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">


				<TableRow
					android:id="@+id/faTblRow0"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="center">

					<TextView
						android:id="@+id/faLabelName"
						android:layout_width="59.6dp"
						android:layout_height="23.6dp"
						android:layout_marginLeft="0dp"
						android:layout_marginTop="0dp"
						android:gravity="center"
						android:text="@string/text_tbl_name"
						android:textSize="16sp" />

					<TextView
						android:id="@+id/faLabelFile"
						android:layout_width="39.6dp"
						android:layout_height="23.6dp"
						android:layout_marginTop="0dp"
						android:gravity="center"
						android:text="@string/text_tbl_file"
						android:textSize="16sp" />

					<TextView
						android:id="@+id/faLabelAction"
						android:layout_width="59.6dp"
						android:layout_height="23.6dp"
						android:layout_marginTop="0dp"
						android:gravity="center"
						android:text="@string/text_tbl_action"
						android:textSize="16sp" />

				</TableRow>

				<TableRow
					android:id="@+id/faTblRow1"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="center">


					<TextView
						android:id="@+id/faTxtName"
						android:layout_width="200dp"
						android:layout_height="match_parent"
						android:background="@drawable/border"
						android:gravity="start|center_vertical"
						android:text="Name"
						android:textSize="16sp" />

					<ImageView
						android:id="@+id/faImageView"
						android:layout_width="31dp"
						android:layout_height="30dp"
						android:layout_marginTop="0dp"
						android:background="@drawable/border"
						android:contentDescription="fa_ib_view"
						android:src="@drawable/fa_ib_view" />

					<androidx.constraintlayout.widget.ConstraintLayout
						android:id="@+id/faContainerActionButtons"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="0dp"
						android:background="@drawable/border">

						<ImageView
							android:id="@+id/faBtnRefresh"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginStart="10dp"
							android:contentDescription="fa_ib_refresh"
							android:src="@drawable/fa_ib_refresh"
							app:layout_constraintStart_toEndOf="@+id/faBtnCancel"
							app:layout_constraintTop_toTopOf="parent" />

						<ImageView
							android:id="@+id/faBtnCancel"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginStart="10dp"
							android:contentDescription="fa_ib_cancel"
							android:src="@drawable/fa_ib_cancel"
							app:layout_constraintStart_toEndOf="@+id/faBtnConfirm"
							app:layout_constraintTop_toTopOf="parent" />

						<ImageView
							android:id="@+id/faBtnConfirm"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:contentDescription="fa_ib_confirm"
							android:src="@drawable/fa_ib_confirm"
							app:layout_constraintStart_toStartOf="parent"
							app:layout_constraintTop_toTopOf="parent" />

					</androidx.constraintlayout.widget.ConstraintLayout>

				</TableRow>


			</TableLayout>
		</ScrollView>

	</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>