<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".activity.RenewalRegistration_Activity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/form_header"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ror_iv_red_circle"
            android:layout_width="264dp"
            android:layout_height="264dp"
            android:layout_marginEnd="-120dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/circle"
            android:backgroundTint="#FE4949"
            android:contentDescription="@string/red_circle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="ImageContrastCheck" />

        <ImageButton
            android:id="@+id/ror_btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="19dp"
            android:backgroundTint="#00FFFFFF"
            android:contentDescription="@string/back_btn"
            android:scaleType="center"
            android:src="@drawable/left_arrow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/form_header">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="30dp"
            android:text="@string/text_renewal_of_registration"
            android:textAlignment="center"
            android:textSize="34sp" />

        <LinearLayout
            android:id="@+id/ror_mvis_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ror_lbl_mvis"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:labelFor="@id/ror_inpt_mvis"
                android:text="@string/text_1_mvis"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/ror_inpt_mvis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_corner_rectangle20"
                android:ems="10"
                android:enabled="false"
                android:inputType="text"
                android:padding="12dp" />

            <ImageButton
                android:id="@+id/ror_btn_upload_mvis"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:scaleType="centerCrop"
                android:src="@drawable/upload"
                tools:src="@drawable/upload" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ror_insurance_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ror_lbl_insurance"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:labelFor="@id/ror_inpt_insurance"
                android:text="@string/text_2_insurance"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/ror_inpt_insurance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_corner_rectangle20"
                android:ems="10"
                android:enabled="false"
                android:inputType="text"
                android:padding="12dp" />

            <ImageButton
                android:id="@+id/ror_btn_upload_insurance"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:scaleType="centerCrop"
                android:src="@drawable/upload"
                tools:src="@drawable/upload" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ror_certificationRegistration_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ror_lbl_certificationRegistration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:labelFor="@id/ror_inpt_certificationRegistration"
                android:text="@string/text_3_certification_of_registration"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/ror_inpt_certificationRegistration"
                android:layout_width="131dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_corner_rectangle20"
                android:ems="10"
                android:enabled="false"
                android:inputType="text"
                android:padding="12dp" />

            <ImageButton
                android:id="@+id/ror_btn_upload_certificationRegistration"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:scaleType="centerCrop"
                android:src="@drawable/upload"
                tools:src="@drawable/upload" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ror_originalReceipt_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ror_lbl_originalReceipt"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:labelFor="@id/ror_inpt_originalReceipt"
                android:text="@string/text_4_original_receipt"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/ror_inpt_originalReceipt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_corner_rectangle20"
                android:ems="10"
                android:enabled="false"
                android:inputType="text"
                android:padding="12dp" />

            <ImageButton
                android:id="@+id/ror_btn_upload_originalReceipt"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:scaleType="centerCrop"
                android:src="@drawable/upload"
                tools:src="@drawable/upload" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ror_proofPayment_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ror_lbl_proofPayment"
                android:layout_width="143dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:labelFor="@id/ror_inpt_proofPayment"
                android:text="@string/text_5_proof_of_payment"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/ror_inpt_proofPayment"
                android:layout_width="159dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_corner_rectangle20"
                android:ems="10"
                android:enabled="false"
                android:inputType="text"
                android:padding="12dp" />

            <ImageButton
                android:id="@+id/ror_btn_upload_proofPayment"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:scaleType="centerCrop"
                android:src="@drawable/upload"
                tools:src="@drawable/upload" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ror_lto_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="50dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:textAlignment="center">

            <TextView
                android:id="@+id/ror_lbl_lto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/text_submit_to_lto"
                android:textAlignment="center" />

            <Spinner
                android:id="@+id/ror_spinner_lto"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginHorizontal="20dp"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown" />

        </LinearLayout>

        <Button
            android:id="@+id/ror_btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#3FBB54"
            android:text="@string/text_btn_submit"
            android:textColor="@color/black" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

