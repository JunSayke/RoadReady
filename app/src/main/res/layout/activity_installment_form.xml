<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.InstallmentForm_Activity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/form_header"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/inst_iv_red_circle"
            android:layout_width="264dp"
            android:layout_height="264dp"
            android:layout_marginEnd="-120dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/circle"
            android:backgroundTint="#FE4949"
            android:contentDescription="@string/red_circle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="ImageContrastCheck" />

        <ImageButton
            android:id="@+id/inst_btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="19dp"
            android:backgroundTint="#00FFFFFF"
            android:scaleType="center"
            android:src="@drawable/left_arrow"
            android:contentDescription="@string/back_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/inst_tv_content_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="165dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="165dp"
        android:text="@string/text_installment_form"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/form_header" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/inst_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:background="#D9D9D9"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inst_tv_content_title">

        <LinearLayout
            android:id="@+id/inst_inpt_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/inst_fname_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/inst_lbl_fname"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:labelFor="@id/inst_inpt_fname"
                    android:text="@string/text_fname"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/inst_inpt_fname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:autofillHints="@string/placeholder_first_name"
                    android:background="@drawable/rounded_corner_rectangle20"
                    android:ems="10"
                    android:inputType="text"
                    android:padding="12dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/inst_lname_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/inst_lbl_lname"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:labelFor="@id/inst_inpt_lname"
                    android:text="@string/text_lname"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/inst_inpt_lname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:autofillHints="@string/placeholder_last_name"
                    android:background="@drawable/rounded_corner_rectangle20"
                    android:ems="10"
                    android:inputType="text"
                    android:padding="12dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/inst_address_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/inst_lbl_address"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:labelFor="@id/inst_inpt_address"
                    android:text="@string/text_address"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/inst_inpt_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:autofillHints="@string/placeholder_last_name"
                    android:background="@drawable/rounded_corner_rectangle20"
                    android:ems="10"
                    android:inputType="text"
                    android:padding="12dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/inst_phonenum_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/inst_lbl_phonenum"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:labelFor="@id/inst_inpt_phonenum"
                    android:text="@string/text_phone_number"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/inst_inpt_phonenum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:autofillHints="@string/placeholder_phone_number"
                    android:background="@drawable/rounded_corner_rectangle20"
                    android:ems="10"
                    android:inputType="phone|number"
                    android:padding="12dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/inst_validid_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/inst_lbl_validid"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:labelFor="@id/inst_inpt_validid"
                    android:text="@string/text_valid_id"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/inst_inpt_validid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:autofillHints="@string/placeholder_phone_number"
                    android:background="@drawable/rounded_corner_rectangle20"
                    android:ems="10"
                    android:enabled="false"
                    android:inputType="text"
                    android:padding="12dp" />

                <ImageButton
                    android:id="@+id/inst_btn_upload_validid"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/upload"
                    tools:src="@drawable/upload" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/inst_comakerName_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/inst_lbl_comakerName"
                    android:layout_width="156dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:labelFor="@id/inst_inpt_validid"
                    android:text="@string/text_comaker_name"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/inst_inpt_comakerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:autofillHints="@string/placeholder_phone_number"
                    android:background="@drawable/rounded_corner_rectangle20"
                    android:ems="10"
                    android:inputType="text"
                    android:padding="12dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/inst_comakerValidId_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/inst_lbl_comakerValidId"
                    android:layout_width="192dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:labelFor="@id/inst_inpt_validid"
                    android:text="@string/text_comaker_name"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/inst_inpt_comakerValidId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:autofillHints="@string/placeholder_phone_number"
                    android:background="@drawable/rounded_corner_rectangle20"
                    android:ems="10"
                    android:inputType="text"
                    android:padding="12dp" />

                <ImageButton
                    android:id="@+id/inst_btn_upload_comakerValidId"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/upload"
                    tools:src="@drawable/upload" />

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.github.gcacace.signaturepad.views.SignaturePad
                    android:id="@+id/inst_signature_pad"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/rectangle"
                    app:layout_constraintBottom_toTopOf="@+id/inst_tv_signature"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.496"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:penColor="@android:color/black" />

                <TextView
                    android:id="@+id/inst_tv_signature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="165dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="165dp"
                    android:layout_marginBottom="8dp"
                    android:text="@string/text_signature"
                    app:layout_constraintBottom_toTopOf="@+id/inst_btn_container"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/inst_signature_pad" />

                <LinearLayout
                    android:id="@+id/inst_btn_container"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="152dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="151dp"
                    android:layout_marginBottom="24dp"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/inst_tv_signature">

                    <Button
                        android:id="@+id/inst_btn_submit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_weight="1"
                        android:backgroundTint="#3FBB54"
                        android:text="@string/text_btn_submit"
                        android:textColor="#000000" />

                    <Button
                        android:id="@+id/inst_btn_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_weight="1"
                        android:backgroundTint="#FE4949"
                        android:text="@android:string/cancel"
                        android:textColor="#000000" />
                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>