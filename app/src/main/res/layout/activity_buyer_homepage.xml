<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rectangle"
    tools:context=".activity.BuyerHomepage_Activity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/buyer_header"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#888484"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/bh_iv_user_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/circle"
                android:backgroundTint="#8DDEF0"
                android:contentDescription="@string/vector_user_icon"
                android:scaleType="centerInside"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/default_user_icon"
                tools:ignore="ImageContrastCheck"
                tools:srcCompat="@drawable/default_user_icon" />

            <TextView
                android:id="@+id/bh_tv_user_welcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="54dp"
                android:layout_marginBottom="27dp"
                android:text="@string/text_welcome_user"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/bh_iv_user_icon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

            <ImageView
                android:id="@+id/bh_iv_red_circle"
                android:layout_width="264dp"
                android:layout_height="264dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/circle"
                android:backgroundTint="#FE4949"
                android:contentDescription="@string/red_circle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/bh_tv_user_welcome"
                tools:ignore="ImageContrastCheck" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bh_search_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buyer_header">

            <EditText
                android:id="@+id/editTextText"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="41dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="32dp"
                android:autofillHints="@string/text_search_vehicle"
                android:background="@drawable/rounded_corner_rectangle20"
                android:drawableEnd="@drawable/hp_iv_searchicon"
                android:ems="10"
                android:foregroundGravity="clip_vertical"
                android:hint="@string/text_search_vehicle"
                android:inputType="text"
                android:padding="12dp"
                android:textAlignment="viewStart"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/imageButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="72dp"
                android:layout_marginBottom="32dp"
                android:backgroundTint="#FFFFFF"
                android:contentDescription="@string/vector_filter_icon"
                android:scaleType="centerInside"
                android:src="@drawable/hp_iv_filtericon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/editTextText"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bh_rcmd_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bh_search_container">

            <TextView
                android:id="@+id/bh_tv_rcmd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginBottom="5dp"
                android:text="@string/text_recommended_for_you"
                app:layout_constraintBottom_toTopOf="@+id/bh_hsv_rcmd_items"
                app:layout_constraintStart_toStartOf="parent" />

            <HorizontalScrollView
                android:id="@+id/bh_hsv_rcmd_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/rectangle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:id="@+id/bh_rcmd_items_container"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/bh_rcmd_item_container_1"
                        android:layout_width="125dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:background="@drawable/rectangle"
                        android:foreground="@drawable/hp_iv_hotdeal"
                        android:foregroundGravity="top|right"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/bh_imgbtn_rcmd_item_1"
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:backgroundTint="#FFFFFF"
                            android:contentDescription="@string/recommended_item"
                            android:foregroundGravity="right"
                            android:scaleType="center"
                            android:src="@drawable/hp_iv_civic"
                            tools:src="@drawable/hp_iv_civic" />

                        <Button
                            android:id="@+id/bh_btn_view_item_1"
                            android:layout_width="wrap_content"
                            android:layout_height="38dp"
                            android:backgroundTint="#0EB2F8"
                            android:text="@string/text_view_now"
                            android:textColor="#060606"
                            tools:ignore="TouchTargetSizeCheck" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/bh_r_item_container_2"
                        android:layout_width="125dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:background="@drawable/rectangle"
                        android:foreground="@drawable/hp_iv_hotdeal"
                        android:foregroundGravity="top|right"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/bh_imgbtn_rcmd_item_2"
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:backgroundTint="#FFFFFF"
                            android:contentDescription="@string/recommended_item"
                            android:foregroundGravity="right"
                            android:scaleType="center"
                            android:src="@drawable/hp_iv_yamaha"
                            tools:src="@drawable/hp_iv_yamaha" />

                        <Button
                            android:id="@+id/bh_btn_view_item_2"
                            android:layout_width="wrap_content"
                            android:layout_height="38dp"
                            android:backgroundTint="#0EB2F8"
                            android:text="@string/text_view_now"
                            android:textColor="#060606"
                            tools:ignore="TouchTargetSizeCheck" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/bh_r_item_container_3"
                        android:layout_width="125dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:background="@drawable/rectangle"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/bh_imgbtn_rcmd_item_3"
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:backgroundTint="#FFFFFF"
                            android:contentDescription="@string/recommended_item"
                            android:foreground="@drawable/hp_iv_hotdeal"
                            android:foregroundGravity="right"
                            android:scaleType="center"
                            android:src="@drawable/hp_iv_territory"
                            tools:src="@drawable/hp_iv_territory" />

                        <Button
                            android:id="@+id/bh_btn_view_item_3"
                            android:layout_width="wrap_content"
                            android:layout_height="38dp"
                            android:backgroundTint="#0EB2F8"
                            android:gravity="center"
                            android:text="@string/text_view_now"
                            android:textColor="#060606"
                            tools:ignore="TouchTargetSizeCheck" />
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bh_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bh_rcmd_container">

            <ScrollView
                android:id="@+id/bh_sv_items"
                android:layout_width="wrap_content"
                android:layout_height="420dp"
                android:layout_marginVertical="20dp"
                android:background="@drawable/rectangle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:id="@+id/bh_items_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <LinearLayout
                        android:id="@+id/bh_item_container_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginVertical="10dp"
                        android:background="@drawable/rounded_corner_rectangle40"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/bh_iv_item_1"
                            android:contentDescription="@string/vehicle_item"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            app:srcCompat="@drawable/hp_iv_fortuner"
                            tools:srcCompat="@drawable/hp_iv_fortuner" />

                        <LinearLayout
                            android:id="@+id/bh_desc_container_1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="20dp"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/bh_tv_name_item_1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="FORTUNER"
                                android:textAlignment="center"
                                android:textSize="16sp"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:id="@+id/bh_tv_desc_item_1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_weight="1"
                                android:text="Toyota Ayala 23km"
                                android:textAlignment="center"
                                android:textSize="11sp"
                                tools:ignore="HardcodedText" />

                            <Button
                                android:id="@+id/bh_btn_select_item_1"
                                android:layout_width="match_parent"
                                android:layout_height="36dp"
                                android:layout_weight="1"
                                android:backgroundTint="#3FBB54"
                                android:text="@string/text_select"
                                android:textColor="#000000"
                                android:textSize="12sp"
                                tools:ignore="HardcodedText,TouchTargetSizeCheck" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/bh_item_container_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginVertical="10dp"
                        android:background="@drawable/rounded_corner_rectangle40"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/bh_iv_item_2"
                            android:contentDescription="@string/vehicle_item"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            app:srcCompat="@drawable/hp_iv_fortuner"
                            tools:srcCompat="@drawable/hp_iv_fortuner" />

                        <LinearLayout
                            android:id="@+id/bh_desc_container_2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="20dp"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/bh_tv_name_item_2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="FORTUNER"
                                android:textAlignment="center"
                                android:textSize="16sp"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:id="@+id/bh_tv_desc_item_2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_weight="1"
                                android:text="Toyota Mabolo 9km"
                                android:textAlignment="center"
                                android:textSize="11sp"
                                tools:ignore="HardcodedText" />

                            <Button
                                android:id="@+id/bh_btn_select_item_2"
                                android:layout_width="match_parent"
                                android:layout_height="36dp"
                                android:layout_weight="1"
                                android:backgroundTint="#3FBB54"
                                android:text="@string/text_select"
                                android:textColor="#000000"
                                android:textSize="12sp"
                                tools:ignore="TouchTargetSizeCheck" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/bh_item_container_3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginVertical="10dp"
                        android:background="@drawable/rounded_corner_rectangle40"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/bh_iv_item_3"
                            android:contentDescription="@string/vehicle_item"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            app:srcCompat="@drawable/hp_iv_fortuner"
                            tools:srcCompat="@drawable/hp_iv_fortuner" />

                        <LinearLayout
                            android:id="@+id/bh_desc_container_3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="20dp"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/bh_tv_name_item_3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="FORTUNER"
                                android:textAlignment="center"
                                android:textSize="16sp"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:id="@+id/bh_tv_desc_item_3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_weight="1"
                                android:text="Toyota Mandaue 15km"
                                android:textAlignment="center"
                                android:textSize="11sp"
                                tools:ignore="HardcodedText" />

                            <Button
                                android:id="@+id/bh_btn_select_item_3"
                                android:layout_width="match_parent"
                                android:layout_height="36dp"
                                android:layout_weight="1"
                                android:backgroundTint="#3FBB54"
                                android:text="@string/text_select"
                                android:textColor="#000000"
                                android:textSize="12sp"
                                tools:ignore="TouchTargetSizeCheck" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/bh_item_container_4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginVertical="10dp"
                        android:background="@drawable/rounded_corner_rectangle40"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/bh_iv_item_4"
                            android:contentDescription="@string/vehicle_item"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            app:srcCompat="@drawable/hp_iv_fortuner"
                            tools:srcCompat="@drawable/hp_iv_fortuner" />

                        <LinearLayout
                            android:id="@+id/bh_desc_container_4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="20dp"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/bh_tv_name_item_4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="FORTUNER"
                                android:textAlignment="center"
                                android:textSize="16sp"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:id="@+id/bh_tv_desc_item_4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_weight="1"
                                android:text="Toyota Mandaue 15km"
                                android:textAlignment="center"
                                android:textSize="11sp"
                                tools:ignore="HardcodedText" />

                            <Button
                                android:id="@+id/bh_btn_select_item_4"
                                android:layout_width="match_parent"
                                android:layout_height="36dp"
                                android:layout_weight="1"
                                android:backgroundTint="#3FBB54"
                                android:text="@string/text_select"
                                android:textColor="#000000"
                                android:textSize="12sp"
                                tools:ignore="TouchTargetSizeCheck" />
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>
            </ScrollView>

            <ImageView
                android:id="@+id/bh_iv_cyan_circle"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:background="@drawable/circle"
                android:backgroundTint="#8DDEF0"
                android:contentDescription="@string/cyan_circle_left"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/bh_sv_items"
                tools:ignore="ImageContrastCheck" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>