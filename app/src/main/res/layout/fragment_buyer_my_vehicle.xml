<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myvContainerContent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".fragments.buyer.myvehiclefragments.MyVehicle_Fragment">

    <TextView
        android:id="@+id/apTxtSoon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:gravity="center"
        android:text="Coming Soon"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/apTitleContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_application_progress"
        android:textAlignment="center"
        android:textSize="34sp" />

    <LinearLayout
        android:id="@+id/myvContainerItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/apLblItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Template Vehicle"
            android:textAlignment="center"
            tools:ignore="HardcodedText" />

        <ImageView
            android:id="@+id/apImageItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/sgd_iv_conquest" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/myvContainerDetail"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="166dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/myvLblRegisterDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="10dp"
                android:text="@string/text_registered_on"
                android:textAlignment="center"
                android:textColor="#9A9696" />

            <TextView
                android:id="@+id/myvInptRegisterDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="10dp"
                android:layout_weight="1"
                android:textColor="#9A9696"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/myvLblExpiryDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="10dp"
                android:text="@string/text_expiry_on"
                android:textAlignment="center"
                android:textColor="#9A9696" />

            <TextView
                android:id="@+id/myvInptExpiryDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="10dp"
                android:layout_weight="1"
                android:textColor="#9A9696"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <Button
            android:id="@+id/myvBtnRenewRegistration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="30dp"
            android:backgroundTint="#D9D9D9"
            android:text="@string/text_renew_registration"
            android:textColor="@color/black"
            app:cornerRadius="0dp" />
    </LinearLayout>
</LinearLayout>
