<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="activity.SignUpAs_Activity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/signupas_tv_signupas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="145dp"
            android:layout_marginTop="126dp"
            android:layout_marginEnd="146dp"
            android:layout_marginBottom="525dp"
            android:text="@string/text_signupas"
            android:textAlignment="center"
            android:textColor="#332F2F"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/signupas_btn_vbuyer"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="121dp"
            android:layout_marginBottom="25dp"
            android:backgroundTint="#0EB2F8"
            android:text="@string/text_btn_vbuyer"
            android:textAlignment="center"
            android:textColor="#332F2F"
            android:textStyle="bold"
            app:cornerRadius="5dp"
            app:layout_constraintBottom_toTopOf="@+id/signupas_btn_dealer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signupas_tv_signupas" />

        <Button
            android:id="@+id/signupas_btn_dealer"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="121dp"
            android:backgroundTint="#0EB2F8"
            android:text="@string/text_btn_dealership"
            android:textColor="#332F2F"
            android:textStyle="bold"
            app:cornerRadius="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signupas_btn_vbuyer" />

        <TextView
            android:id="@+id/signupas_tv_already_have_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="101dp"
            android:layout_marginTop="87dp"
            android:layout_marginBottom="270dp"
            android:text="@string/text_already_have_account"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/signupas_tv_login"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signupas_btn_dealer" />

        <TextView
            android:id="@+id/signupas_tv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="87dp"
            android:layout_marginEnd="110dp"
            android:layout_marginBottom="270dp"
            android:text="@string/text_login"
            android:textColor="#3B76AF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/signupas_tv_already_have_account"
            app:layout_constraintTop_toBottomOf="@+id/signupas_btn_dealer" />

        <ImageView
            android:id="@+id/signupas_iv_or"
            android:contentDescription="@string/vector_or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="55dp"
            android:layout_marginTop="29dp"
            android:layout_marginEnd="56dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signupas_tv_already_have_account"
            app:srcCompat="@drawable/login_grp_or"
            tools:srcCompat="@drawable/login_grp_or" />

        <Button
            android:id="@+id/signupas_btn_googleLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="87dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="87dp"
            android:layout_marginBottom="155dp"
            android:backgroundTint="#FFFFFF"
            android:foreground="@drawable/google"
            android:foregroundGravity="left"
            android:paddingStart="70dp"
            android:paddingEnd="30dp"
            android:text="@string/text_btn_loginGoogle"
            android:textColor="#747070"
            android:textSize="12sp"
            app:cornerRadius="28dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signupas_iv_or" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>