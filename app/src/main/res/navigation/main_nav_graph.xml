<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/opening_Fragment">

    <fragment
        android:id="@+id/login_Fragment"
        android:name="com.example.roadready.fragments.common.Login_Fragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_login_Fragment_to_signUpAs_Fragment2"
            app:destination="@id/signUpAs_Fragment2" />
        <action
            android:id="@+id/action_login_Fragment_to_homePageContainer_Fragment"
            app:destination="@id/homePageContainer_Fragment"
            app:popUpTo="@id/login_Fragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/signUpAs_Fragment2"
        android:name="com.example.roadready.fragments.common.SignUpAs_Fragment"
        android:label="fragment_sign_up_as"
        tools:layout="@layout/fragment_sign_up_as" >
        <action
            android:id="@+id/action_signUpAs_Fragment2_to_signUp_Fragment"
            app:destination="@id/signUp_Fragment" />
        <action
            android:id="@+id/action_signUpAs_Fragment2_to_login_Fragment"
            app:destination="@id/login_Fragment" />
    </fragment>
    <fragment
        android:id="@+id/signUp_Fragment"
        android:name="com.example.roadready.fragments.common.SignUp_Fragment"
        android:label="fragment_sign_up"
        tools:layout="@layout/fragment_sign_up" >
        <action
            android:id="@+id/action_signUp_Fragment_to_login_Fragment"
            app:destination="@id/login_Fragment" />
    </fragment>
    <fragment
        android:id="@+id/opening_Fragment"
        android:name="com.example.roadready.fragments.common.Opening_Fragment"
        android:label="fragment_opening"
        tools:layout="@layout/fragment_opening" >
        <action
            android:id="@+id/action_opening_Fragment_to_login_Fragment"
            app:destination="@id/login_Fragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/opening_Fragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_opening_Fragment_to_homePageContainer_Fragment"
            app:destination="@id/homePageContainer_Fragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/opening_Fragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/homePageContainer_Fragment"
        android:name="com.example.roadready.fragments.common.HomepageContainer_Fragment"
        android:label="fragment_homepage_container"
        tools:layout="@layout/fragment_homepage_container" >
        <action
            android:id="@+id/action_homePageContainer_Fragment_to_verification_Fragment"
            app:destination="@id/verification_Fragment" />
    </fragment>
    <fragment
        android:id="@+id/verification_Fragment"
        android:name="com.example.roadready.fragments.common.Verification_Fragment"
        android:label="fragment_verification"
        tools:layout="@layout/fragment_verification" />
</navigation>